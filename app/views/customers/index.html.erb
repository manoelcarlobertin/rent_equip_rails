<!-- Toolbar Component -->
<div id="kt_toolbar" class="py-5 pb-lg-15 bg-gray-800">
  <div id="kt_toolbar_container" class="container-xxl flex flex-wrap justify-between items-center">

    <!-- Page Title -->
    <header class="flex flex-col mr-3">
      <h1 class="text-white font-bold my-1 text-3xl">Listagem de Clientes</h1>
    </header>

    <!-- Action Button -->
    <div class="flex items-center py-3 md:py-1">
      <% if policy(Customer).create? %>
        <%= link_to "Novo", new_customer_path,
          class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Content Container -->
<main id="kt_content_container" class="container-xxl">
  <section class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-700 bg-gray-900 text-white rounded-lg">
      <thead class="bg-gray-800">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold uppercase">Nome</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold uppercase">Email</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold uppercase">Telefone</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold uppercase">Data de Nascimento</th>
          <th scope="col" class="px-6 py-3 text-center text-sm font-semibold uppercase">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-700">
        <% @customers.each do |customer| %>
          <tr class="hover:bg-gray-800">
            <td class="px-6 py-4 whitespace-nowrap">
              <%= customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= customer.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= customer.mobile_phone %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= l(customer.dob, format: :long) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center space-x-2">
              <%= link_to "Editar", edit_customer_path(customer), class: "text-blue-400 hover:text-blue-300" %>
              <%= button_to "Excluir", customer, method: :delete, data: { confirm: "Tem certeza?" },
                  class: "text-red-500 hover:text-red-400" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>