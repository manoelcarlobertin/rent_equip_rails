<!-- Header -->
<nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <!-- Logo and Toggle Button -->
      <div class="flex items-center justify-start">
        <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
          <span class="sr-only">Open sidebar</span>
          <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
          </svg>
        </button>
        <!-- Logo -->
        <div class="flex ml-2 md:mr-24">
          <a href="/" class="flex items-center">
            <%= image_tag "template/logos/demo2.png", class: "h-8 mr-3", alt: "Logo" %>
            <%= image_tag "template/logos/demo2-sticky.png", class: "hidden h-8 mr-3 dark:block", alt: "Logo Dark" %>
          </a>
        </div>
      </div>

      <!-- Navigation Menu -->
      <div class="flex items-center">
        <div class="hidden lg:flex lg:items-center lg:ml-6">
          <%= render "shared/menu" %>
        </div>

        <!-- User Menu -->
        <div class="flex items-center ml-3">
          <div class="flex items-center gap-2">
            <%= button_to destroy_user_session_path,
                method: :delete,
                class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800" do %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Sair
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class="h-[72px]"></div>